FROM ubuntu:latest

ENV DEBIAN_FRONTEND=noninteractive

# Linux deps
RUN apt-get update && apt-get install -y \
    build-essential \
    wget \
    libssl-dev \
    ninja-build \
    pkg-config \
    clang-19 \
    clang-tools-19 \
    lld-19 \
    git \
    ca-certificates \
    bash \
    file \
    curl \
    zip \
    unzip \
    tar \
    && rm -rf /var/lib/apt/lists/*

# Build and install CMake 3.31.5 from source.
RUN wget https://github.com/Kitware/CMake/releases/download/v3.31.5/cmake-3.31.5.tar.gz && \
    tar -xzf cmake-3.31.5.tar.gz && \
    cd cmake-3.31.5 && \
    ./bootstrap && \
    make -j"$(nproc)" && \
    make install && \
    cd .. && \
    rm -rf cmake-3.31.5 cmake-3.31.5.tar.gz

# Verify CMake version (optional)
RUN cmake --version

# Set environment variables for compilers and tools
ENV CC=/usr/bin/clang-19
ENV CXX=/usr/bin/clang++-19
ENV CMAKE_C_COMPILER=/usr/bin/clang-19
ENV CMAKE_CXX_COMPILER=/usr/bin/clang++-19
ENV CMAKE_MAKE_PROGRAM=/usr/bin/ninja
ENV VCPKG_ROOT=/root/vcpkg
ENV PATH="$VCPKG_ROOT:$PATH"

# Set the working directory
WORKDIR /workspace

# Volumes
VOLUME ["/workspace"]
VOLUME ["/workspace/build"]
VOLUME ["/workspace/deps"]

# Install vcpkg and dependencies
RUN mkdir "$VCPKG_ROOT"
RUN git clone https://github.com/microsoft/vcpkg.git "$VCPKG_ROOT" && \ 
  "$VCPKG_ROOT/bootstrap-vcpkg.sh" -disableMetrics
RUN mkdir /workspace/deps
COPY deps/vcpkg-ci.json /workspace/deps/vcpkg.json
RUN cd /workspace/deps && vcpkg install

# Entrypoinst script
COPY scripts/entrypoint.sh /usr/local/bin/entrypoint.sh
RUN chmod +x /usr/local/bin/entrypoint.sh
ENTRYPOINT ["/usr/local/bin/entrypoint.sh"]
